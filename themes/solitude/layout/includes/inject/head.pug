if theme.memorial.enable
    script.
        let mdate = "!{theme.memorial.date}";
        mdate = (mdate.split(","));
        let ndate = new Date();
        for (let i of mdate) {
            if (i === (ndate.getMonth()+1) + "-" + (ndate.getDate())) {
                document.documentElement.classList.add('memorial');
            }
        }

if theme.extends.head
    each item in theme.extends.head
        != item

