  .author-content-item.game-apex
    min-height 300px
    overflow hidden
    color var(--efu-white)
    width 59%

    &::after
      box-shadow 0 -69px 203px 11px #04120f inset
      position absolute
      content ''
      width 100%
      height 100%
      top 0
      left 0

    .card-content
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      z-index 2
      display flex
      flex-direction column
      padding 1rem 2rem

