#about-page
  .author-content-item.like-technology
    background-size cover
    min-height 230px
    color var(--efu-white)

    &::after
      box-shadow 0 -69px 203px 11px #050b20 inset
      position absolute
      content ''
      width 100%
      height 100%
      top 0
      left 0

  .author-content-item.like-music
    background-size cover
    min-height 400px
    color var(--efu-white)
    overflow hidden

    &::after
      box-shadow 0 -69px 203px 11px #0e0e0e inset
      position absolute
      content ''
      width 100%
      height 100%
      top 0
      left 0