#article-container
  .btn-sco
    position relative
    padding 8px 15px
    text-transform uppercase
    border var(--style-border)
    border-radius 10px
    overflow hidden
    transition all 0.3s
    display inline-flex
    justify-content center
    align-items center

    &.outline
      background var(--efu-white)
      color var(--efu-main)
      border-color var(--efu-main)

      &:hover
        background var(--efu-main)
        color var(--efu-white)
        border-color var(--efu-main)

    i
      transition all 0.3s
      padding-right 8px

    span
      transition all 0.3s

    &:hover
      background var(--efu-main)

      span
        transform all 0.3s ease-in-out
        color var(--efu-white)

      i
        transform all 0.3s ease-in-out
        color var(--efu-white)